<!DOCTYPE html>
{{#if htmlWebpackPlugin.options.page.lang.en}}
<html lang="en">
{{else if htmlWebpackPlugin.options.page.lang.fr}}
<html lang="fr">
{{/if}}
<head>
  {{> components/head}}
</head>
<body>
  <div class="container">
  {{#if htmlWebpackPlugin.options.page.sections.traffic.map}}
  <!-- start traffic -->
    {{> components/traffic text=htmlWebpackPlugin.options.page.text}}
  <!-- end traffic -->
  {{/if}}
  {{!-- pipeline has traffic data, but no leaflet map. Trans-Northern/group2 --}}
  {{#if htmlWebpackPlugin.options.page.sections.traffic.noMap}}
  <!-- start traffic -->
    {{> components/trafficNoMap text=htmlWebpackPlugin.options.page.text}}
  <!-- end traffic -->
  {{/if}}
  {{#if htmlWebpackPlugin.options.page.sections.apportion}}
  <!-- start apportionment -->
    {{> components/apportion text=htmlWebpackPlugin.options.page.text}}
  <!-- end apportionment -->
  {{/if}}
  {{#if htmlWebpackPlugin.options.page.sections.safety}}
  <!-- start safety and environment -->
    {{> components/safety_environment text=htmlWebpackPlugin.options.page.text}}
  <!-- end safety and environment -->
  {{/if}}
  </div>
  {{> components/footer}}
</body>
</html>
